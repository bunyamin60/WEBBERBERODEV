@model WEBBERBERODEV.Models.RandevuViewModel

@{
    ViewData["Title"] = "Randevu Düzenle";
}

<h1>Randevu Düzenle</h1>

<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="HizmetIds" class="form-label">Hizmetler</label>
        <select asp-for="HizmetIds" class="form-select" multiple="multiple" asp-items="ViewBag.HizmetId"></select>
        <span asp-validation-for="HizmetIds" class="text-danger"></span>
        <small class="form-text text-muted">Ctrl veya Cmd tuşunu kullanarak birden fazla hizmet seçebilirsiniz.</small>
    </div>

    <div class="mb-3">
        <label asp-for="CalisanId" class="form-label">Çalışan</label>
        <select asp-for="CalisanId" class="form-select" asp-items="ViewBag.CalisanId"></select>
        <span asp-validation-for="CalisanId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="RandevuTarihi" class="form-label">Randevu Tarihi ve Saati</label>
        <input asp-for="RandevuTarihi" class="form-control" type="datetime-local" />
        <span asp-validation-for="RandevuTarihi" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a class="btn btn-secondary" asp-action="Index">Geri</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
