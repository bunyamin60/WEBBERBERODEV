@model WEBBERBERODEV.Models.CalisanHizmet

@{
    ViewData["Title"] = "Hizmet Sil";
}

<h1>Hizmet Sil</h1>

<h3>Bu hizmeti çalışana atamak istediğinize emin misiniz?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">Çalışan</dt>
        <dd class="col-sm-10">@Model.Calisan.Ad @Model.Calisan.Soyad</dd>

        <dt class="col-sm-2">Hizmet</dt>
        <dd class="col-sm-10">@Model.Hizmet.Ad</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="CalisanId" />
        <input type="hidden" asp-for="HizmetId" />
        <button type="submit" class="btn btn-danger">Sil</button>
        <a class="btn btn-secondary" asp-action="Index">Geri</a>
    </form>
</div>
