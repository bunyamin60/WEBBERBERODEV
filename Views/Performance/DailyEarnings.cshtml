@model IEnumerable<WEBBERBERODEV.Models.EmployeeDailyEarningsViewModel>
@{
    ViewBag.Title = "Günlük Kazançlar";
}

<h2>@ViewBag.Title - @ViewBag.SelectedDate.ToShortDateString()</h2>

<form method="get" asp-action="DailyEarnings">
    <div class="form-group">
        <label for="date">Tarih:</label>
        <input type="date" id="date" name="date" value="@ViewBag.SelectedDate.ToString("yyyy-MM-dd")" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Göster</button>
</form>

<table class="table table-striped mt-4">
    <thead>
        <tr>
            <th>Çalışan</th>
            <th>Toplam Kazanç</th>
            <th>Randevu Sayısı</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.EmployeeName</td>
                <td>@item.TotalEarnings.ToString("C")</td>
                <td>@item.TotalAppointments</td>
            </tr>
        }
    </tbody>
</table>
