@model WEBBERBERODEV.Models.Calisan

@{
    ViewData["Title"] = $"{Model.AdSoyad} - Çalışma Saatleri";
}

<h1>@Model.AdSoyad - Çalışma Saatleri</h1>

<p>
    <a class="btn btn-primary" asp-action="CreateCalismaSaati" asp-route-calisanId="@Model.Id">Yeni Çalışma Saati Ekle</a>
    <a class="btn btn-secondary" asp-action="Index">Geri</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Gün</th>
            <th>Başlangıç Saati</th>
            <th>Bitiş Saati</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var saat in Model.CalisanCalismaSaatleri)
        {
            <tr>
                <td>@saat.Gun</td>
                <td>@saat.BaslangicSaati.ToString(@"hh\:mm")</td>
                <td>@saat.BitisSaati.ToString(@"hh\:mm")</td>
                <td>
                    <a class="btn btn-warning" asp-action="EditCalismaSaati" asp-route-id="@saat.Id">Düzenle</a>
                    <a class="btn btn-danger" asp-action="DeleteCalismaSaati" asp-route-id="@saat.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
