@model WEBBERBERODEV.Models.Calisan

@{
    ViewData["Title"] = "Çalışan Detayları";
}

<h1>Çalışan Detayları</h1>
<div>
    <dl class="row">
        <dt class="col-sm-2">Ad</dt>
        <dd class="col-sm-10">@Model.Ad</dd>

        <dt class="col-sm-2">Soyad</dt>
        <dd class="col-sm-10">@Model.Soyad</dd>

        <dt class="col-sm-2">Uzmanlık</dt>
        <dd class="col-sm-10">@Model.Uzmanlik</dd>

        <dt class="col-sm-2">Aktif Mi</dt>
        <dd class="col-sm-10">@(Model.AktifMi ? "Evet" : "Hayır")</dd>
    </dl>
</div>



<!-- Admin'e Özel Butonlar -->
@if (User.IsInRole("Admin"))
{
    <h2>Çalışma Saatleri</h2>
    <p>
        <a class="btn btn-primary" asp-action="CalismaSaatleri" asp-route-id="@Model.Id">Çalışma Saatlerini Görüntüle</a>
    </p>
    <p>
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Düzenle</a>
        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.Id">Sil</a>
    </p>
    <p>
        <a class="btn btn-secondary" asp-controller="Calisan" asp-action="Index">Geri</a>
    </p>
}
else{
    <p>
        <a class="btn btn-secondary" asp-controller="Home" asp-action="Index">Geri</a>
    </p>


}

