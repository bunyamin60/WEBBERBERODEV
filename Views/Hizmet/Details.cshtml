@model WEBBERBERODEV.Models.Hizmet

@{
    ViewData["Title"] = "Hizmet Detayları";
}

<h1>Hizmet Detayları</h1>

<div>
    <h4>Hizmet</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Ad
        </dt>
        <dd class="col-sm-10">
            @Model.Ad
        </dd>
        <dt class="col-sm-2">
            Sure (Dakika)
        </dt>
        <dd class="col-sm-10">
            @Model.SureDakika
        </dd>
        <dt class="col-sm-2">
            Fiyat
        </dt>
        <dd class="col-sm-10">
            @Model.Fiyat.ToString("C")
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Düzenle</a> |
    <a class="btn btn-secondary" asp-action="Index">Geri</a>
</div>
