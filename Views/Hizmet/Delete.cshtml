@model WEBBERBERODEV.Models.Hizmet

@{
    ViewData["Title"] = "Hizmet Sil";
}

<h1>Hizmet Sil</h1>

<h3>Bu hizmeti silmek istediÄŸinize emin misiniz?</h3>
<div>
    <h4>Hizmet</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Ad
        </dt>
        <dd class="col-sm-10">
            @Model.Ad
        </dd>
        <dt class="col-sm-2">
            Sure (Dakika)
        </dt>
        <dd class="col-sm-10">
            @Model.SureDakika
        </dd>
        <dt class="col-sm-2">
            Fiyat
        </dt>
        <dd class="col-sm-10">
            @Model.Fiyat.ToString("C")
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Sil</button> |
        <a class="btn btn-secondary" asp-action="Index">Geri</a>
    </form>
</div>
