@page
@model WEBBERBERODEV.Pages.ChangeHairStyleModel
@{
    ViewData["Title"] = "Saç Stili Değiştir";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header text-center bg-primary text-white">
            <h2 class="mb-0">Saç Stili Değiştir</h2>
        </div>
        <div class="card-body">
            <form method="post" enctype="multipart/form-data">
                <div class="form-group mb-3">
                    <label for="Image" class="form-label">Resim Yükle</label>
                    <input type="file" class="form-control" id="Image" name="Image" accept="image/*" required />
                </div>
                <div class="form-group mb-3">
                    <label for="HairstyleStyle" class="form-label">Saç Stili Seç</label>
                    <select id="HairstyleStyle" name="HairstyleStyle" class="form-select" required>
                        <option value="" disabled selected>Bir stil seçiniz...</option>
                        <option value="101">Bangs</option>
                        <option value="201">Long Hair</option>
                        <option value="301">Bangs with Long Hair</option>
                        <option value="401">Medium Hair Increase</option>
                        <!-- API'nin desteklediği saç stili isimlerini ekleyin -->
                    </select>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary btn-lg px-5">
                        <i class="fas fa-magic"></i> Stili Değiştir
                    </button>
                </div>
            </form>

            @if (Model.ProcessedImage != null)
            {
                <div class="mt-4 text-center">
                    <h3 class="text-success">İşlenmiş Resim:</h3>
                    <img src="@Model.ProcessedImage" alt="Processed Image" class="img-fluid rounded shadow-sm mt-3" style="max-width: 100%; height: auto;" />
                </div>
            }
        </div>
    </div>
</div>
